extends ../layaout/index
block contenido
     main.container.mt-5
          h1.text-center.mb-5 #{pagina}

          .row
               .col-md-12
                    
                    include ../layaout/partials/testimoniales
                            
                         
                    h2.text-center Agrega un Testimonial
                    if(errores)
                         each error in errores
                              .alert.alert-danger.text-center=error.mensaje
                    

                    .row-justify-content-center
                         .col-md-8
                              form(method="POST" action="/testimoniales")
                                   .form-group
                                        label(for="nombre") Nombre 
                                        input(type="text",placeholder=" Tu nombre",name="nombre",id="nombre",value=nombre,class="form-control")
                                   .form-group
                                        label(for="correo") Correo Electronico 
                                        input(type="email",placeholder=" Tu Correo Electronico",name="correo",id="correo",value=correo,class="form-control")
                                   .form-group
                                        label(for="mensaje") Mensaje 
                                        textarea#mensaje(name="mensaje", rows="3",class="form-control",placeholder="Tu Mensaje")= mensaje
                                   input(type="submit",class="btn btn-success btn-block",value="agregar")